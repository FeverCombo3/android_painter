<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_splash_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/icon_splash" />

    <TextView
        android:id="@+id/tv_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/padding_20dp"
        android:text="@string/splash_change"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_16sp" />

    <TextView
        android:id="@+id/tv_splash_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:background="@drawable/shape_count_down"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/count_tips"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="@dimen/padding_12dp">
        <!--tips-->
        <TextView
            android:id="@+id/tv_slpash_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/padding_8dp"
            android:textColor="@android:color/white"
            tools:text="@string/splash_pic_tips" />

        <!--时间-->
        <TextView
            android:id="@+id/tv_splash_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/padding_8dp"
            android:textColor="@android:color/white"
            tools:text="@string/splash_pic_time" />
    </LinearLayout>
</RelativeLayout>