<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android_painter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android_painter.ui.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--常规绘制-->
        <activity
            android:name="com.example.android_painter.ui.NormalActivity"
            android:label="@string/canvas_draw" />
        <!--显示界面-->
        <activity
            android:name="com.example.android_painter.ui.NormalItemActivity"
            android:hardwareAccelerated="false"
            android:label="@string/canvas_draw" />
        <!--裁剪-->
        <activity
            android:name="com.example.android_painter.ui.ClipActivity"
            android:label="@string/canvas_clip" />
        <!--裁剪展示页-->
        <activity
            android:name="com.example.android_painter.ui.ClipDisplayActivity"
            android:label="@string/canvas_clip" />
    </application>

</manifest>